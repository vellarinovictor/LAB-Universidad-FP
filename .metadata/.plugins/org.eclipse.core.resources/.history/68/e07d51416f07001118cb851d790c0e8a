package fp.universidad.tipos;

public record Nota(Asignatura asignatura, String cursoAcademico, Convocatoria convocatoria, Double valor, Boolean mencionHonor) {
	public Calificacion getCalificacion() {
		if(valor>=9) {
			if (mencionHonor) {
				return Calificacion.MATRICULA_DE_HONOR;
			}
			else {
				return Calificacion.SOBRESALIENTE;
			}
		} else if (valor>=7) {
			return Calificacion.NOTABLE;
		} else if (valor>=5) {
			return Calificacion.APROBADO;
		} else {
			return Calificacion.SUSPENSO;
		}
	}
	
	public Nota(Asignatura asignatura, String cursoAcademico, Convocatoria convocatoria, Double valor) {
		this(asignatura, cursoAcademico, convocatoria, valor, false);
	}
	
}
