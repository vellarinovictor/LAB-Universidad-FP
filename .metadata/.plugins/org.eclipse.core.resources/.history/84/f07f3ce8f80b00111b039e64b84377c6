package fp.universidad.tipos;

import java.time.DayOfWeek;
import java.time.LocalTime;

public record Tutoria(DayOfWeek diaSemana, LocalTime horaComienzo, LocalTime horaFin) {
	public Tutoria(DayOfWeek diaSemana, LocalDateTime fechaComienzo, LocalDateTime fechaFin){
		this(diaSemana,fechaComienzo,fechaComienzo.until(fechaFin, null).getMinute());
	}
	
}
